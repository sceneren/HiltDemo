<?xml version="1.0" encoding="utf-8"?>
<com.github.sceneren.base.widget.AutoSizeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tl_tab"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        app:tl_iconHeight="18dp"
        app:tl_iconWidth="18dp"
        app:tl_indicator_color="@color/theme"
        app:tl_indicator_height="0dp"
        app:tl_indicator_style="TRIANGLE"
        app:tl_textSelectColor="@color/theme"
        app:tl_textUnselectColor="#66000000"
        app:tl_textsize="12sp"
        app:tl_underline_gravity="TOP"
        app:tl_underline_color="#DDDDDD"
        app:tl_underline_height="1dp" />
</com.github.sceneren.base.widget.AutoSizeLinearLayout>